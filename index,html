<script>
	const strings = [
		'Civil Engineer',
		'Teacher',
		'Web Developer',
		'Civil Engineer, Teacher & Web Developer'
	];

	let i = 0; // string index
	let j = 0; // character index
	let currentText = '';
	let isDeleting = false;
	const speed = 100; // typing speed
	const pause = 2000; // pause before deleting

	const el = document.getElementById("typewriter");

	function type() {
		const fullText = strings[i];

		if (isDeleting) {
			currentText = fullText.substring(0, j--);
		} else {
			currentText = fullText.substring(0, j++);
		}

		el.textContent = currentText;

		if (!isDeleting && j === fullText.length) {
			setTimeout(() => { isDeleting = true; type(); }, pause);
			return;
		}

		if (isDeleting && j === 0) {
			isDeleting = false;
			i = (i + 1) % strings.length;
		}

		setTimeout(type, isDeleting ? speed / 2 : speed);
	}

	type();
</script>

<script>
	const navLinks = document.querySelectorAll('nav a');
	function setActive(link) {
		navLinks.forEach(a => a.classList.remove('active'));
		if (link) link.classList.add('active');
	}

	// Scroll detection
	window.addEventListener('scroll', () => {
		const y = window.scrollY;
		const width = window.innerWidth;
		let section = '';

		if (width < 600) {
			if (y < 520) section = '#';
			else if (y < 1770) section = '#about';
			else if (y < 2870) section = '#education';
			else if (y < 4400) section = '#experience';
			else if (y < 6800) section = '#services';
			else if (y < 9500) section = '#contact';
		} else if (width < 1024) {
			if (y < 520) section = '#';
			else if (y < 1220) section = '#about';
			else if (y < 2500) section = '#education';
			else if (y < 3500) section = '#experience';
			else if (y < 6000) section = '#services';
			else if (y < 8300) section = '#contact';
		} else {
			if (y < 520) section = '#';
			else if (y < 1200) section = '#about';
			else if (y < 2100) section = '#education';
			else if (y < 3000) section = '#experience';
			else if (y < 4200) section = '#services';
			else if (y < 6650) section = '#contact';
		}

		navLinks.forEach(link => {
			const href = link.getAttribute('href');
			link.classList.toggle('active', href === section);
		});
	});

	// Click active marker
	navLinks.forEach(link => {
		link.addEventListener('click', () => setActive(link));
	});
</script>

